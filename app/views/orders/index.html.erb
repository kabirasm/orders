  <tr>
    <td><%= order.customer_id %></td>
    <td><%= order.company_id %></td>
    <td><%= order.item %></td>
    <td><%= order.dateoforder %></td>
    <td><%= order.duedate %></td>
    <td><%= link_to 'Show', order %></td>
